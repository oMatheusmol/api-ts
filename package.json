{
  "name": "api-typescript",
  "version": "1.0.0",
  "main": "startup.js",
  "license": "MIT",
  "author": "Matheus Mol",
  "scripts": {
    "build": "tsc --build",
    "clean": "tsc --build --clean",
    "start": "SET NODE_ENV=production&& node src/main/startup.js",
    "dev": "SET NODE_ENV=development&& ts-node-dev --tls-min-v1.0 -r tsconfig-paths/register --respawn --transpile-only --ignore-watch node_modules --no-notify src/main/startup.ts",
    "deploy": "npm i & npm run build & pm2 delete ecosystem.config.yaml & pm2 start ecosystem.config.yaml",
    "restart": "pm2 delete ecosystem.config.yaml & pm2 start ecosystem.config.yaml",
    "stop": "pm2 delete ecosystem.config.yaml",
    "test": "jest --detectOpenHandles",
    "test:silent": "jest --watchAll --silent --noStackTrace",
    "test:coverage": "jest --coverage --silent --noStackTrace"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/config": "^0.0.38",
    "@types/cors": "^2.8.9",
    "@types/dateformat": "^5.0.0",
    "@types/express": "^4.17.11",
    "@types/faker": "^5.5.9",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^27.0.2",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mssql": "^6.0.7",
    "@types/node": "^16.11.6",
    "@typescript-eslint/eslint-plugin": "^4.13.0",
    "@typescript-eslint/parser": "^4.13.0",
    "eslint": "^7.18.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "2.22.1",
    "Faker": "^0.7.2",
    "jest": "^27.3.1",
    "nodemon": "^2.0.7",
    "ts-jest": "^27.0.7",
    "ts-node-dev": "^1.1.1",
    "tsconfig-paths": "^3.9.0",
    "tscpaths": "^0.0.9",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "body-parser": "^1.19.0",
    "class-validator": "^0.13.1",
    "config": "^3.3.3",
    "cors": "^2.8.5",
    "date-fns": "^2.25.0",
    "dateformat": "^5.0.2",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-openapi-validator": "^4.13.2",
    "helmet": "^4.4.1",
    "jimp": "^0.16.1",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "moment": "^2.29.1",
    "mssql": "^6.3.1",
    "reflect-metadata": "^0.1.13",
    "swagger-ui-express": "^4.1.6",
    "tracer": "^1.1.5",
    "typeorm": "^0.2.31",
    "yamljs": "^0.3.0"
  }
}
